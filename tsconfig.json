{
  "compilerOptions": {
    "target": "es2020",                        
    "module": "commonjs",                      
    "strict": true,                            
    "esModuleInterop": true,                   
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true,             
    "useDefineForClassFields": false,         
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"                         
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
